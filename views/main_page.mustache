<!DOCTYPE html>
<html>
  <head>
    <title>Hamilton Home Tire Change Service</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
  </head>
  <body>
    <div class="container">
      <div class="row my-3">
        <div class="col-12">
          <!-- Logo and header -->
          <div class="d-flex justify-content-center mb-3">
            <img src="../logo.jpg" alt="Tire Change Service Logo" style="max-width: 100px" />
          </div>
          <h1 class="text-center mb-4">Hamilton Home Tire Change Service</h1>
          <!-- Navigation bar -->
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  {{^userId}}

                  <li class="nav-item">
                    <a class="nav-link" href="/loginform"> Login </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/signupform"> Sign Up </a>
                  </li>
                  {{/userId}}
                  {{#userId}}
                  <li class="nav-item">
                    <span class="nav-link text-primary">Hi, User ID: {{ userId }}</span>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/updateform"> Update Profile </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/passwordform"> Change Password </a>
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link"
                      href="/delete"
                      onclick="return confirm('Are you sure you want to delete your account?');"
                    >
                      Delete Account
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                  </li>
                  {{/userId}}
                </ul>
              </div>
            </div>
          </nav>
        </div>
      </div>
    </div>

    <!-- Signup form -->
    {{#showSignupForm}}
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Sign Up</h3>
          </div>
          <div class="card-body">
            <form action="/signup" method="post">
              <div class="row">
                <div class="col-md-6">
                  <label for="userName" class="form-label">Username</label>
                  <input type="text" class="form-control" id="userName" name="userName" required />
                </div>
                <div class="col-md-6">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password" required />
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label for="businessName" class="form-label">Business Name</label>
                  <input type="text" class="form-control" id="businessName" name="businessName" required />
                </div>
                <div class="col-md-6">
                  <label for="price" class="form-label">Service Price ($)</label>
                  <input type="number" step="1" class="form-control" id="price" name="price" required />
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label for="phone" class="form-label">Phone Number</label>
                  <input type="text" class="form-control" id="phone" name="phone" required />
                </div>
                <div class="col-md-6">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email" required />
                </div>
              </div>

              <div>
                <a href="/" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Sign Up</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/showSignupForm}}

    <!-- Login form -->
    {{#showLoginForm}}
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Login</h3>
          </div>
          <div class="card-body">
            <form action="/login" method="post">
              <div class="mb-3">
                <label for="userName" class="form-label">Username</label>
                <input type="text" class="form-control" id="userName" name="userName" required />
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required />
              </div>
              <div class="text-end">
                <a href="/" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Login</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/showLoginForm}}

    <!-- Update business form -->
    {{#showUpdateForm}}
    <div class="row justify-content-center">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Update Profile</h3>
            </div>
            <div class="card-body"></div>
            <form action="/update" method="post">
              <input type="hidden" name="userId" value="{{ userId }}" />
              <div class="row">
                <div class="col-md-6">
                  <label for="businessName" class="form-label">Business Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="businessName"
                    name="businessName"
                    value="{{ updateData.business_name }}"
                    required
                  />
                </div>
                <div class="col-md-6">
                  <label for="price" class="form-label">Service Price ($)</label>
                  <input
                    type="number"
                    step="1"
                    class="form-control"
                    id="price"
                    name="price"
                    value="{{ updateData.price }}"
                    required
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label for="phone" class="form-label">Phone Number (digits only)</label>
                  <input
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value="{{ updateData.phone }}"
                    required
                  />
                </div>
                <div class="col-md-6">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    value="{{ updateData.email }}"
                    required
                  />
                </div>
              </div>
              <div class="text-end">
                <a href="/" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/showUpdateForm}}

    <!-- Change password form -->
    {{#showPasswordForm}}
    <div class="row justify-content-center">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Change Password</h3>
            </div>
            <div class="card-body"></div>
          </div>
        </div>
      </div>
    </div>
    {{/showPasswordForm}}

    <!-- Business listings -->
    <div class="row">
      <div class="col-12">
        <h2 class="mb-4">Available Tire Change Services</h2>
      </div>
    </div>

    <div class="row">
      {{#businesses}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{ business_name }}</h5>
            <p class="card-text">
              <strong><i class="fas fa-phone"></i> Phone:</strong> {{ phone }}<br />
              <strong><i class="fas fa-envelope"></i> Email:</strong> {{ email }}<br />
              <strong><i class="fas fa-dollar-sign"></i> Price:</strong> ${{ price }}
            </p>
          </div>
        </div>
      </div>
      {{/businesses}}
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
